<fieldset class="form-group">
    {{#each fields}}
        {{#if show}}
            <label for="{{../../routeType}}-{{name}}-{{../../cid}}" class="lead">{{label}}</label>
            {{#if fieldTypeSelect}}
                <select id="{{../../../routeType}}-{{name}}-{{../../../cid}}" name="{{name}}" class="field {{fieldType}} type form-control{{#if hasSiblingField}} has-sibling-field{{/if}}" data-placeholder="{{placeholder}}">
                    <option></option>
                    {{#each options}}
                        <option value="{{id}}">{{text}}</option>
                    {{/each}}
                </select>
                {{#unless append}}
                    <br />
                {{/unless}}
            {{else}}
                <input type="{{fieldType}}" id="{{../../../routeType}}-{{name}}-{{../../../cid}}" name="{{name}}" placeholder="{{placeholder}}" value="{{value}}" class="field {{../../../routeType}} {{name}} form-control{{#if hasSiblingField}} has-sibling-field{{/if}}" />
            {{/if}}
            {{#if append}}
                {{{append}}}
            {{/if}}
        {{/if}}
    {{/each}}
</fieldset>

{{#if step.next}}
    <div class="row">
        <div class="col-xs-6 col-xs-offset-6">
            <button class="{{type}} btn btn-success next ccma-navigate form-control" data-path="{{step.next}}" role="button">Next</button>
        </div>
    </div>
{{/if}}
