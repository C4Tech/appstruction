<fieldset class="form-group">
    <label for="delete-job" class="lead ccma-lead">Browse Jobs</label>
    <select id="delete-job" name="delete-job" class="field type form-control">
        <option></option>
        {{#each job_groups}}
            <optgroup label="Group: {{group.name}}">
                {{#each jobs}}
                    <option value="{{cid}}">{{name}}</option>
                {{/each}}
            </optgroup>
        {{/each}}
    </select>
</fieldset>

<br />
<div class="row">
    <div class="col-xs-6 col-xs-offset-6">
        <button id="delete-job-button" class="btn btn-default next ccma-navigate form-control" data-path="" role="button">Delete Estimate</button>
    </div>
</div>
