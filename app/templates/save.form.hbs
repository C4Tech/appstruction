<fieldset class="form-group col-xs-12">
    <input type="number" placeholder="Profit Margin" id="job-profit-margin" name="margin" class="job field form-control" value="{{row.margin}}" />
     <input type="text" placeholder="Job Name" id="job-name" name="name" class="job field form-control" value="{{row.name}}" />
</fieldset>

<div class="job text-success pull-right">
    Total Cost:
    <span class="job cost">{{cost}}</span>
</div>

<button class="btn btn-success btn-block job save" data-path="home">Save</button>
<button class="btn btn-danger btn-block job reset" data-path="create">Start Over</button>
